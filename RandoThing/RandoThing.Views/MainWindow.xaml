<base:FroggoMainWindow
    x:Class="RandoThing.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:base="clr-namespace:FroggoBase.Views;assembly=FroggoBase.Views"
    mc:Ignorable="d"
    Title="No Bnads Please"
    Height="450"
    Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File"/>
            <MenuItem Header="Help"/>
        </Menu>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Height="80" Width="160" Margin="40" Content="Teams"/>
            <Button Height="80" Width="160" Margin="40" Content="Civs"/>
            <Button Height="80" Width="160" Margin="40" Content="Maps"/>
        </StackPanel>

        <StatusBar Grid.Row="2" >
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</base:FroggoMainWindow>